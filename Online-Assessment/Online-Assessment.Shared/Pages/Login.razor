@page "/"

@using Microsoft.AspNetCore.Components

<div class="login-container">
    <div class="left-section">
        <div class="welcome-box">
            <img src="capgemini-logo.png" alt="Capgemini Logo" class="logo" />
            <h2>WELCOME TO</h2>
            <h2>TEST GENIUS</h2>
        </div>
    </div>
    <div class="right-section">
        <img src="capgemini-logo.png" alt="Capgemini Logo" class="login-logo" />
        <div class="login-form">
            <input type="text" placeholder="User Name" class="input-field" />
            <input type="password" placeholder="Password" class="input-field" />
            <button class="login-button">Login</button>
        </div>
        <div class="footer">
            <p>2025 Capgemini. All rights reserved.</p>
            <div>
                <a href="#">Terms of Use</a> | <a href="#">Privacy Policy</a>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        height: 100vh;
    }
    .left-section {
        flex: 1;
        background: url('/images/background-image.jpg') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    .welcome-box {
        background-color: rgba(0, 0, 50, 0.8);
        color: white;
        padding: 30px;
        text-align: center;
    }
    .right-section {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    .login-form {
        display: flex;
        flex-direction: column;
        width: 300px;
        align-items: center;
    }
    .input-field {
        margin: 10px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
    }
    .login-button {
        background-color: #00E6E3;
        border: none;
        padding: 4px;
        color: white;
        border-radius: 15px;
        cursor: pointer;
        width: 50%;
        text-align: center;
        margin-top: 10px;
    }
    .footer {
        position: absolute;
        bottom: 20px;
        text-align: center;
    }
    .footer a {
        text-decoration: none;
        color: #000;
    }
</style>
