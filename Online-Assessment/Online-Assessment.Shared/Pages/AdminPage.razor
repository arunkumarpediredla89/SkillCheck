@page "/adminPage"

@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@using System.Collections.Generic
 
<div class="container">
    <div class="selection-container">
        <h3 class="section-title">HR Admin</h3>
        <div class="grid-container">
            <div class="grid-item">
                <label>User Type:</label>
                <select id="userType">
                    <option value="internal">Internal</option>
                    <option value="candidate">Candidate</option>
                </select>
            </div>
            <div class="grid-item">
                <label>Username:</label>
                <input type="text" id="username" placeholder="Enter username" />
            </div>
            
            <div class="grid-item">
                <label>Difficulty Level:</label>
                <select id="difficulty">
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>
            <div class="grid-item">
                <label>Time Limit:</label>
                <input type="text" value="30 min" readonly />
            </div>
            <div class="grid-item">
                <label>Select Technology:</label>
                <select id="technology" onchange="updateSubTechnology()">
                    <option value="maui">.NET MAUI</option>
                    <option value="blazor">Blazor Framework</option>
                    <option value="web">Web Development</option>
                </select>
            </div>
            <div class="grid-item full-width button-container">
                <button onclick="saveAndNavigate()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
function saveAndNavigate() {
    let username = document.getElementById("username").value;

    if (!username) {
        alert("Please enter a username.");
        return;
    }

    localStorage.setItem("username", username);
    window.location.href = "/nextpage";
}

function updateSubTechnology() {
    const subTechDropdown = document.getElementById("subTechnology");
    subTechDropdown.innerHTML = ""; // Clear existing options
    
    const techMap = {
        "maui": ["HTML", "C#", "SQL"],
        "blazor": ["Razor", "C#"],
        "web": ["HTML", "CSS", "JavaScript"]
    };
    
    const selectedTech = document.getElementById("technology").value;
    
    techMap[selectedTech].forEach(subTech => {
        let option = document.createElement("option");
        option.value = subTech.toLowerCase();
        option.textContent = subTech;
        subTechDropdown.appendChild(option);
    });
}
</script>

<style>
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f8f9fa;
}

.selection-container {
    width: 50%;
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.section-title {
    text-align: center;
    color: #007BFF;
    font-weight: bold;
}

.grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.grid-item {
    display: flex;
    flex-direction: column;
}

label {
    font-weight: bold;
    margin-bottom: 5px;
}

input, select {
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

button {
    width: 100%;
    background-color: #007BFF;
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

.full-width {
    grid-column: span 2;
}
</style>
